<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Prendas</title>
</head>

<body>
    <% if (ropa.length) { %>
        <div class="d-flex align-items-center flex-column ">
            <table class="table table-dark">
                <tr>
                    <th>nombre</th>
                    <th>precio</th>
                    <th>img</th>
                </tr>
                <tbody>
                    <% ropa.forEach(function(item){ %>
                        <tr>
                            <td>
                                <%-item.title%>
                            </td>
                            <td>
                                <%-item.price%>
                            </td>
                            <td><img src="<%-item.thumbnail%>" alt="<%-item.title%>" width="50px" height="50px"></td>
                        </tr>
                        <%}) %>
                </tbody>
            </table>
            <a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
        </div>

        <% } else{ %>
            <h3>No hay prendas</h3>
            <a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
            <% } %>
                <%- include('../partials/scriptBS') %>
</body>

</html>