{{#if ropa.length}}
<div class="d-flex align-items-center flex-column ">
    <table class="table table-dark">
        <tr>
            <th>nombre</th>
            <th>precio</th>
            <th>img</th>
        </tr>
        <tbody>
            {{#each ropa}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img src={{thumbnail}} alt={{title}} width="50px" height="50px"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
</div>

{{ else }}
<h3>No hay prendas</h3>
<a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
{{/if}}